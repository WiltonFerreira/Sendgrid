
<h1>Eventos</h1>
<div class="flex">
  <table id="tabela" class="table table-striped table-bordered display">
      <thead>
          <tr>
              <th>Email</th>
              <th>Ação</th>
              <th>IP</th>
              <th>Data/Hora</th>
              <th>Categoria</th>
              <th>Navegador</th>
          </tr>
      </thead>
          <tbody>
              
                  <% @events.each do |event| %>
                  <tr>
                      <td><%= event['email'] %></td>
                      <td><%= event['event'] %></td>
                      <td><%= event['ip'] %></td>
                      <td><%= Time.at(event['timestamp']).strftime("%d/%m/%Y %H:%M") %></td>
                      <td><%= event['category'] %></td>
                      <td><%= event['useragent'] %></td>
                  </tr>
                  <% end %>
          </tbody>
        <tfoot>
            <tr>
                <th>Email</th>
                <th>Ação</th>
                <th>IP</th>
                <th>Data/Hora</th>
                <th>Categoria</th>
                <th>Navegador</th>
            </tr>
        </tfoot>
              
  </table>

</div>

<script>
  $(document).ready(function(){
     $('#tabela').DataTable();
  });
</script>